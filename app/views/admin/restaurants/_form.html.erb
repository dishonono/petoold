<%= form_with(model: restaurant, url: admin_restaurant_path(restaurant), local: true) do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :restaurant_name %>
  </div>

  <div class="field">
    <%= form.label :genre_id %>
    <%= form.collection_select(:genre_id, Genre.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, id: :restaurant_rating %>
  </div>

  <div class="field">
    <%= form.label :ten_bis %>
    <%= form.check_box :ten_bis, id: :restaurant_ten_bis %>
  </div>

  <div class="field">
    <%= form.label :max_delivey_time %>
    <%= form.number_field :max_delivey_time, id: :restaurant_max_delivey_time %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :restaurant_address %>
  </div>

  <div class="field">
    <%= form.label :geo %>
    <%= form.text_field :geo, id: :restaurant_geo %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
